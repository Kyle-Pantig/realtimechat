{
  "name": "realtime-chat",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "socket": "node socket-server.js",
    "dev:all": "concurrently \"npm run dev\" \"npm run socket\"",
    "build": "next build",
    "start": "next start",
    "start:production": "node server-production.js",
    "docker:build": "docker build -t realtime-chat .",
    "docker:run": "docker run -p 3001:3001 realtime-chat",
    "docker:compose": "docker-compose up -d",
    "lint": "eslint"
  },
  "dependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "next": "15.5.0",
    "postcss": "^8.5.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
